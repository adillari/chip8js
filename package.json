{
  "devDependencies": {
    "prettier": "^3.3.2",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "tailwindcss": "^3.4.4"
  },
  "scripts": {
    "build:css": "npx tailwindcss -i ./css/input.css -o ./css/output.css",
    "lint": "npx prettier ./*.* ./js ./css/input.css --write --log-level debug",
    "lint:check": "npx prettier ./*.* ./js ./css/input.css --check --log-level debug"
  }
}
